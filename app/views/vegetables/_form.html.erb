<div class="row">
  <div class="col-lg-6">
    <%= form_for([@plantation, @vegetable]) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :variety %>
        <%= f.text_field :variety, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :color %>
        <%= f.text_field :color, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :harvested_at %>
        <%= f.date_select :harvested_at %>
      </div>
      <div>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>


